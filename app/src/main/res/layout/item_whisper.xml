<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#424242"
    android:padding="8dp"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/whisperText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/reactionLayout" />

    <LinearLayout
        android:id="@+id/reactionLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/whisperText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp">

        <Button
            android:id="@+id/heartButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="❤️ 0"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/dark_blue"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/thumbButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="👍 0"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/dark_blue"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/smileButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="😊 0"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/dark_blue"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/partyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🎉 0"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/dark_blue"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/cryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="😢 0"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/dark_blue"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/wowButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="😮 0"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/dark_blue"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/angryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="😡 0"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/dark_blue"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/loveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="💖 0"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/dark_blue"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/laughButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="😂 0"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/dark_blue"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/prayButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🙏 0"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/dark_blue" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>